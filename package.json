{
  "name": "ds-adoption-scanner",
  "version": "0.1.0",
  "description": "CLI tool for scanning DS adoption across React/TypeScript repositories",
  "type": "module",
  "bin": {
    "ds-scanner": "./dist/cli.cjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "ai-instructions"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "lint": "eslint src --ext .ts && tsc --noEmit"
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^8.0.0",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.0.0",
    "fdir": "^6.4.0",
    "jiti": "^2.4.0",
    "ora": "^8.0.1",
    "picomatch": "^4.0.2",
    "typescript": "^5.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/picomatch": "^3.0.0",
    "tsup": "^8.0.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18"
  }
}
